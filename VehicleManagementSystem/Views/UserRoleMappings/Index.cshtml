@model IEnumerable<VehicleManagementSystem.Models.UserRoleMapping>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h4>Users list</h4>
<hr />
<p>
    @Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-success" })
</p>
<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                   Role Name
                </th>
                <th>
                    User Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Username)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) |                       
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
