@model IEnumerable<VehicleManagementSystem.Models.Quotation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h4>List of quotations</h4>
<hr>

<table class="display" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visitor.DateOfVisit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.ModelName)
            </th>
            <th>
                Visitor's Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th>
                    @Html.DisplayFor(model => item.Visitor.DateOfVisit)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.SerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.ModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visitor.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>

        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>