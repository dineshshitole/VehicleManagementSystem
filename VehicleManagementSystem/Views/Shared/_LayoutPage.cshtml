<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/css/sidebar.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
</head>
<body>
    <nav class="navbar navbar-light bg-warning justify-content-between">
        <a class="navbar-brand"> </a>
        <form class="form-inline">
            @if (User.Identity.IsAuthenticated == false)
            {
                @User.Identity.Name
                @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-success" })
            }
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-danger" })
            }
        </form>
    </nav>
    <hr>
    <div class="sidenav">
        <img src="~/Content/img/logo.jpg">
        <a>@Html.ActionLink("Kia Motor Dealers", "CarsDisplay", "Home")</a>
        @if (Roles.GetRolesForUser(User.Identity.Name).Contains("Client"))
        {
            <a>@Html.ActionLink("My Dashboard", "ClientCar", "Client")</a>
        }
        @if (Roles.GetRolesForUser(User.Identity.Name).Contains("Admin"))
        {
            <a>@Html.ActionLink("Manage Clients", "Index", "ManageUsers")</a>
            <a>@Html.ActionLink("Manage Vehicles", "Index", "ManageVehicles")</a>
            <a>@Html.ActionLink("Manage Users", "Index", "UserRoleMappings")</a>
            <a>@Html.ActionLink("Sales", "Index", "Sales")</a>
            <a>@Html.ActionLink("Quotations", "Index", "Quotations")</a>
        }
        <a>@Html.ActionLink("About us", "About", "Home")</a>
        <a>@Html.ActionLink("Contact us", "Contact", "Home")</a>
    </div>
    <div class="main">
        @RenderBody()
    </div>
    <div class="footer">
        <p>&#169; Kia Car Dealers copyright 2019-2020</p>
    </div>
    @RenderSection("script", required: false)
</body>
</html>
